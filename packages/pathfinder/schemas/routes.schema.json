{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Routes Configuration",
  "description": "Path to App Runner mapping for CloudFront routing",
  "type": "array",
  "items": {
    "type": "object",
    "required": ["path", "app"],
    "properties": {
      "path": {
        "type": "string",
        "description": "URL path pattern (supports * wildcard)",
        "pattern": "^/.*"
      },
      "app": {
        "type": "string",
        "description": "Target App Runner app name",
        "enum": ["core", "lp", "platform", "templates", "release-notes", "kitchen-sink", "docs"]
      },
      "exact": {
        "type": "boolean",
        "description": "Whether this is an exact match (no prefix matching)",
        "default": false
      }
    },
    "additionalProperties": false
  },
  "minItems": 1
}
